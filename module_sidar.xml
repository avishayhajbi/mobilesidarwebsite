<?xml version="1.0" encoding="UTF-8"?>
<project name="module_sidar" default="compile.module.sidar">
  <dirname property="module.sidar.basedir" file="${ant.file.module_sidar}"/>
  
  <property name="module.jdk.home.sidar" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.sidar" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.sidar" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.sidar" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="sidar.output.dir" value="${module.sidar.basedir}/build/classes/production/sidar"/>
  <property name="sidar.testoutput.dir" value="${module.sidar.basedir}/build/classes/test/sidar"/>
  
  <path id="sidar.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="sidar.module.production.classpath">
    <path refid="${module.jdk.classpath.sidar}"/>
  </path>
  
  <path id="sidar.runtime.production.module.classpath">
    <pathelement location="${sidar.output.dir}"/>
  </path>
  
  <path id="sidar.module.classpath">
    <path refid="${module.jdk.classpath.sidar}"/>
    <pathelement location="${sidar.output.dir}"/>
  </path>
  
  <path id="sidar.runtime.module.classpath">
    <pathelement location="${sidar.testoutput.dir}"/>
    <pathelement location="${sidar.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.sidar">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sidar">
    <patternset refid="excluded.from.module.sidar"/>
  </patternset>
  
  
  <target name="compile.module.sidar" depends="compile.module.sidar.production,compile.module.sidar.tests" description="Compile module sidar"/>
  
  <target name="compile.module.sidar.production" depends="register.custom.compilers" description="Compile module sidar; production classes"/>
  
  <target name="compile.module.sidar.tests" depends="register.custom.compilers,compile.module.sidar.production" description="compile module sidar; test classes" unless="skip.tests"/>
  
  <target name="clean.module.sidar" description="cleanup module">
    <delete dir="${sidar.output.dir}"/>
    <delete dir="${sidar.testoutput.dir}"/>
  </target>
</project>